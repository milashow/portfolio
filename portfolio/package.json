{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio and blog website built with 11ty and Tailwind CSS",
  "main": "index.js",
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy",
    "watch:css": "tailwindcss -i ./src/css/tailwind.css -o ./_site/css/styles.css --watch",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o ./_site/css/styles.css --minify"
  },
  "keywords": ["portfolio", "blog", "11ty", "eleventy", "tailwindcss"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35"
  }
} 