---
layout: base.njk
---

<article class="container py-12">
    <header class="max-w-3xl mx-auto mb-12">
        <h1 class="text-4xl font-bold mb-4">{{ title }}</h1>
        <div class="flex items-center text-gray-600 dark:text-gray-400">
            <time datetime="{{ page.date | dateIso }}">{{ page.date | dateReadable }}</time>
            {% if tags %}
            <span class="mx-2">â€¢</span>
            <div class="flex gap-2">
                {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="text-primary-600 hover:text-primary-700">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-3xl mx-auto">
        {{ content | safe }}
    </div>
</article> 